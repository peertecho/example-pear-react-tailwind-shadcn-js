[
  {
    "test": ".*\\.js$",
    "jsc": {
      "baseUrl":"./",
      "paths": {
         "@/*": ["src/*"]
      },
      "parser": {
        "syntax": "ecmascript",
      }
    }
  },
  {
    "test": ".*\\.jsx$",
    "jsc": {
      "baseUrl":"./",
      "paths": {
         "@/*": ["src/*"]
      },
      "parser": {
        "syntax": "ecmascript",
        "jsx": true
      },
      "transform": {
        "react": {
          "runtime": "automatic"
        }
      }
    }
  }
]
